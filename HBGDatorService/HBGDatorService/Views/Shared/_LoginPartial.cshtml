@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated && Session["Admin"] != null)
{

    @Html.AntiForgeryToken()

            if (Session["Admin"] != null && !(bool)Session["Admin"])
                {
    @HtmlHelpers.MenuItem("Hej " + User.Identity.GetUserName() + "!", "Index", "Home")
                }
                else
                {
    @HtmlHelpers.MenuItem("Hej Administrator " + User.Identity.GetUserName() + "!", "Index", "Home")
                }


    @HtmlHelpers.MenuItem("Logga ut", "Logout", "Account")

}
else
{
    @HtmlHelpers.MenuItem("Registrera dig", "Register", "Account");
    @HtmlHelpers.MenuItem("Logga in", "Login", "Account");
}
